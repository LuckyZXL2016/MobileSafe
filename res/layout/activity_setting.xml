<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zxl="http://schemas.android.com/apk/res/com.zxl.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.zxl.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zxl:desc_off="设置自动更新已经关闭"
        zxl:desc_on="设置自动更新已经开启"
        zxl:title="设置自动更新" >
    </com.zxl.mobilesafe.ui.SettingItemView>

    <com.zxl.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zxl:desc_off="设置显示号码归属地已经关闭"
        zxl:desc_on="设置显示号码归属地已经开启"
        zxl:title="设置显示号码归属地" >
    </com.zxl.mobilesafe.ui.SettingItemView>

    <com.zxl.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_changbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.zxl.mobilesafe.ui.SettingClickView>
    
    <com.zxl.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zxl:desc_off="黑名单拦截已经关闭"
        zxl:desc_on="黑名单拦截已经开启"
        zxl:title="黑名单拦截设置" >
    </com.zxl.mobilesafe.ui.SettingItemView>
    
    <com.zxl.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_watchdog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zxl:desc_off="程序锁已经关闭"
        zxl:desc_on="程序锁已经开启"
        zxl:title="程序锁设置" >
    </com.zxl.mobilesafe.ui.SettingItemView>

</LinearLayout>